<%- include('partials/header') %>
<div class="container">

    <div class="row">

      <!-- Post Content Column -->
      <div class="col-lg-12">

        <!-- Title -->
        <h1 class="mt-4"><%=blog.title%></h1>
        <h4 class="mt-4"><%=blog.subTitle%></h4>

        <!-- Author -->
        <p class="lead">
          by
          <a href="#"><%=blog.author%></a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p><%=blog.time.substring(0,21)%></p>

        <hr>
<%-blog.content%>
      </div>
    </div>
</div>
<%- include('partials/footer') %>